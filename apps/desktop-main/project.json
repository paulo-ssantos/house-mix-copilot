{
  "name": "desktop-main",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/desktop-main/src",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "nx-electron:build",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/apps/desktop-main",
        "main": "apps/desktop-main/src/main.ts",
        "tsConfig": "apps/desktop-main/tsconfig.app.json",
        "assets": ["apps/desktop-main/src/assets"]
      },
      "configurations": {
        "production": {
          "optimization": true,
          "extractLicenses": true,
          "inspect": false,
          "fileReplacements": [
            {
              "replace": "apps/desktop-main/src/environments/environment.ts",
              "with": "apps/desktop-main/src/environments/environment.prod.ts"
            }
          ]
        }
      }
    },
    "serve": {
      "executor": "nx-electron:execute",
      "options": {
        "buildTarget": "desktop-main:build"
      }
    },
    "package": {
      "executor": "nx-electron:package",
      "options": {
        "name": "desktop-main",
        "frontendProject": "@house-mix-copilot/frontend-main",
        "sourcePath": "dist/apps",
        "outputPath": "dist/packages",
        "prepackageOnly": true
      }
    },
    "make": {
      "executor": "nx-electron:make",
      "options": {
        "name": "desktop-main",
        "frontendProject": "@house-mix-copilot/frontend-main",
        "sourcePath": "dist/apps",
        "outputPath": "dist/executables"
      }
    },
    "lint": {
      "command": "eslint apps/desktop-main/**/*.ts"
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{projectRoot}/test-output/jest/coverage"],
      "options": {
        "jestConfig": "apps/desktop-main/jest.config.ts"
      }
    }
  }
}
